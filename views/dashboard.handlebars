<div class="text-center">
    <h2>Welcome, {{name}}!</h2>
</div>

<div class="card col-10 mx-auto">
    <div class="card-header text-center bg-primary text-light">
      <h4>Create a New Blogpost:</a></h4>
    </div>
    <div class="card-body">
        <form class="form new-blogpost-form">
            <div class="form-group">
              <label for="blogpost-title">Blogpost title:</label>
              <input class="form-input col-12" type="text" id="blogpost-title" name="blogpost-title" />
            </div>
            <div class="form-group">
              <label for="blogpost-text">Text:</label>
              <textarea class="form-input col-12" id="blogpost-text" name="blogpost-text"></textarea>
            </div>
            <div class="form-group text-center">
              <button type="submit" class="btn btn-primary col-4">Create</button>
            </div>
          </form>
    </div>
</div>

{{#if blogposts.length}}
<div class="blogpost-list text-center">
  <h3>Current Blogposts:</h3>

  {{#each blogposts as |blogpost|}}

  <div class="card col-10 mx-auto">
    <div>
      <h4><a href="/blogpost/{{blogpost.id}}">{{blogpost.title}}</a></h4>
    </div>
    <div class="form-group text-center">
      <button class="btn btn-danger col-4" data-id="{{blogpost.id}}">DELETE</button>
    </div>
  </div>

  {{/each}}
</div>
{{/if}}
</div>

<script src="./js/dashboard.js"></script>
